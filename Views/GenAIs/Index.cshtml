@model IEnumerable<GenAITech.Models.GenAI>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" type="text/css" href="~/css/edit.css" />
<h1>Genarative AI Websites</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<section>@foreach (var item in Model)
{
    <h2>@Html.DisplayFor(modelItem => item.GenAIName)</h2>
    <p>@Html.DisplayFor(modelItem => item.Summary)</p>
    <p>@Html.DisplayFor(modelItem => item.ImageFileName)</p>
    <p>
        <b>@Html.DisplayFor(modelItem => item.AnchorLink)</b> 
        @*<p>@Html.DisplayFor(modelItem => item.Like)</p>*@
    <p>@{
for (int i = 0; i < item.Like; i++)
{
<span style="color: #f8bd08; ">&#x2605;</span>
}
for (int i = 0; i < 5 - item.Like; i++)
{
<span>&#x2606;</span>
}
}
</p>
    </p>
    <p>
        <a asp-action="IncreaseLike" asp-route-id="@item.Id" class="btn btn-success">Like</a>
        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
        
    </p>
    <hr />
}
</section>
